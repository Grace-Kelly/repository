	public Boolean queryComPanyIsExit(Map<String,Object> param){
		boolean flag =false;
		
		if(param!=null){
			Map<String,Object> resultMap=companyAdminDao.queryCompanyAdmin(param);		
			if(resultMap!=null && !resultMap.isEmpty()){
